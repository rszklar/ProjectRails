<% if flash[:alert] %>
  <%= flash[:alert] %>
<% end %>
<%= form_tag do %>
<br /><br /><br /><br />
<section id="contact">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2>Logowanie</h2>
                    <hr class="star-primary">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                   
                        <div class="row control-group">
                            <div class="form-group col-xs-6 col-xs-offset-4 floating-label-form-group controls">
                                <label>E-mail</label>
                                <%= text_field_tag :email, params[:email] %>
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="row control-group">
                            <div class="form-group col-xs-6 col-xs-offset-4 floating-label-form-group controls">
                                <label>Has≈Ço</label>
								<%= password_field_tag :password, params[:password] %>
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        
                        <br>
                        <div id="success"></div>
                        <div class="row">
                            <div class="form-group col-xs-6 col-xs-offset-4">
                                <%= submit_tag "Login" %>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>








  
  
  
<% end %>